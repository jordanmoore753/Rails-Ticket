<% provide(:title, 'New Tag') %>

<div class="content">
  <h1>New Tag</h1>
  <%= form_with(model: @tag, url: create_tag_path, scope: :tag, local: true) do |f| %>
    <%= render 'shared/error_messages', object: @tag %>
    <div class="field">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input' %>
    </div>
    <div class="field">
      <%= f.submit 'Create Tag', class: 'button is-info' %>
    </div>
  <% end %>
</div>
