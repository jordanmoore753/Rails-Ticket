<% provide(:title, 'Edit Tag') %>

<div class="content">
  <h1>Edit Tag</h1>
  <%= form_with(model: @tag, url: update_tag_path(@tag), scope: :tag, local: true) do |f| %>
    <%= render 'shared/error_messages', object: @tag %>
    <div class="field">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input' %>
    </div>
    <div class="field">
      <%= f.submit 'Edit Tag', class: 'button is-info' %>
    </div>
  <% end %>
</div>