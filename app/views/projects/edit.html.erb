<% provide(:title, 'Edit Project') %>

<div class="content">
  <h1>Edit Project</h1>
</div>

<%= form_with(model: @project, scope: :project, local: true, class: 'form') do |f| %>
  <%= render 'shared/error_messages', object: @project %>
  <div class="field">
    <%= f.label :name, class: 'label' %>
    <%= f.text_field :name, class: 'input' %>
  </div>
  <div class="field">
  <%= f.label :description, class: 'label' %>
  <%= f.text_area :description, class: 'input' %>
  </div>
  <div class="field">
    <%= f.submit 'Edit Project', class: 'button is-info' %>
  </div>
<% end %>