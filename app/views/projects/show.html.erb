<div class="content">
  <h1><%= @project.name %></h1>
  <p class="is-size-5"><%= @project.description %></p>
</div>
<div class="buttons">
  <%= link_to 'Edit Project', edit_project_path(@project.id), class: 'button is-info' %>
  <%= link_to "Delete", project_path(@project.id), data: {:confirm => 'Are you sure?'}, method: :delete, class: 'button is-danger' %>
</div>
<hr>
<div class="content">
  <h4>Tickets</h4>
</div>

<%= render partial: 'tickets/list', locals: { tickets: @tickets } %>
